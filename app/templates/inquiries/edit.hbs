{{#if session.isAuthenticated}}
<h1>Edit Post</h1>
<form>
  <p>{{input value=model.problem placeholder="Problem" class="form-control"}}</p>
  <p>{{textarea value=model.description placeholder="Description" rows="10" class="form-control"}}</p>
  <button {{action "save" model}} class="btn btn-primary">Save Post</button>
  <button {{action "cancel" model}} class="btn btn-link">Cancel</button>
  <button {{action "delete" model}} class="btn btn-danger pull-right">Delete</button>
</form>
{{else}}
  {{not-authorized}}
{{/if}}